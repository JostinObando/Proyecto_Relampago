@model IEnumerable<Proyecto_Relampago.Models.Procedimiento>

@{
    ViewBag.Title = "Procedimientos";
}

<h2 class="page-title">Procedimientos</h2>

<p>
    @Html.ActionLink("Crear Nuevo Procedimiento", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID Eje</th>
            <th>ID Area</th>
            <th>ID Dependencia</th>
            <th>Tipo Procedimiento</th>
            <th>Nombre Procedimiento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var procedimiento in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => procedimiento.IdEje)</td>
                <td>@Html.DisplayFor(modelItem => procedimiento.IdArea)</td>
                <td>@Html.DisplayFor(modelItem => procedimiento.IdDependencia)</td>
                <td>@Html.DisplayFor(modelItem => procedimiento.TipoProcedimiento)</td>
                <td>@Html.DisplayFor(modelItem => procedimiento.NombreProcedimiento)</td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = procedimiento.IdEje }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Editar", "Edit", new { id = procedimiento.IdEje }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = procedimiento.IdEje }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .page-title {
        font-size: 1.5em;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    table.table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        table.table th, table.table td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
        }

        table.table th {
            background-color: #f4f4f4;
            color: #333;
        }

    table.table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .btn {
        padding: 6px 12px;
        font-size: 0.9em;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .btn-sm {
        padding: 5px 10px;
    }

    .btn-info {
        background-color: #17a2b8;
        color: white;
    }

        .btn-info:hover {
            background-color: #138496;
        }

    .btn-warning {
        background-color: #ffc107;
        color: black;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

        .btn-success:hover {
            background-color: #218838;
        }
</style>
