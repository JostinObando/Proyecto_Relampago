@model Proyecto_Relampago.Models.Dependecia

@{
    ViewBag.Title = "Crear Dependencia";
}

<h2>Crear Dependencia</h2>

@using (Html.BeginForm("Create", "Dependencia", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.idDependencia)
        @Html.TextBoxFor(model => model.idDependencia, new { @class = "form-control", placeholder = "Ingrese el ID de la Dependencia" })
        @Html.ValidationMessageFor(model => model.idDependencia)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.nombreDependencia)
        @Html.TextBoxFor(model => model.nombreDependencia, new { @class = "form-control", placeholder = "Ingrese el nombre de la Dependencia" })
        @Html.ValidationMessageFor(model => model.nombreDependencia)
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    @Html.ActionLink("Cancelar", "Dependencias", null, new { @class = "btn btn-secondary" })
}
